<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Reusable style for square blue buttons -->
    <style name="SquareBlueButton">
        <!-- width=0dp plus weight=1 makes it fill equally in a row -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <!-- your blue square background -->
        <item name="android:background">@drawable/bg_button_square_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>

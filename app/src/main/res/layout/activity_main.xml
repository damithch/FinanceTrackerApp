<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: Rs. 0.00"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income: Rs. 0.00"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tv_balance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense: Rs. 0.00"
        android:textSize="18sp"
        android:textColor="#F44336"
        app:layout_constraintTop_toBottomOf="@id/tv_income"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- ðŸŸ¡ Budget Warning Text -->
    <TextView
        android:id="@+id/tv_budget_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#D32F2F"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_expense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Button 1: Add Transaction -->
    <Button
        android:id="@+id/btn_add_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Transaction"
        app:layout_constraintTop_toBottomOf="@id/tv_budget_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Button 2: View Spending Chart -->
    <Button
        android:id="@+id/btn_view_chart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Spending Chart"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button 3: View Transaction History -->
    <Button
        android:id="@+id/btn_transaction_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Transaction History"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_view_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button 4: Set Monthly Budget -->
    <Button
        android:id="@+id/btn_set_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set Monthly Budget"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_transaction_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

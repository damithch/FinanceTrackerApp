<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout for the Finance Dashboard screen -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp">

    <!-- ───── Header ──────────────────────────────────────────── -->
    <TextView
        android:id="@+id/tv_main_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finance Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ───── Balance / Income / Expense ──────────────────────── -->
    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: Rs. 0.00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E88E5"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_header" />

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income: Rs. 0.00"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_balance" />

    <TextView
        android:id="@+id/tv_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense: Rs. 0.00"
        android:textSize="18sp"
        android:textColor="#E53935"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_income" />

    <!-- ───── Budget warning banner (hidden by default) ───────── -->
    <TextView
        android:id="@+id/tv_budget_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="#D32F2F"
        android:background="#FFEBEE"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_expense" />

    <!-- ───── Action buttons ──────────────────────────────────── -->
    <Button
        android:id="@+id/btn_add_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Income"
        android:textColor="@android:color/white"
        app:backgroundTint="#81C784"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_budget_warning" />

    <Button
        android:id="@+id/btn_add_expense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:textColor="@android:color/white"
        app:backgroundTint="#E57373"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_income" />

    <Button
        android:id="@+id/btn_view_chart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Spending Chart"
        android:textColor="@android:color/white"
        app:backgroundTint="#4DD0E1"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_expense" />

    <Button
        android:id="@+id/btn_transaction_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Transaction History"
        android:textColor="@android:color/white"
        app:backgroundTint="#9575CD"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_chart" />

    <Button
        android:id="@+id/btn_set_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set Monthly Budget"
        android:textColor="@android:color/white"
        app:backgroundTint="#FFB74D"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_transaction_history" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@android:color/white"
        app:backgroundTint="#546E7A"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_budget" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FAF8FC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Transaction History"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Filter Income Button -->
        <Button
            android:id="@+id/btn_filter_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show Incomes"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8E44AD"
            android:textColor="#FFF"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_history_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Filter Expense Button -->
        <Button
            android:id="@+id/btn_filter_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show Expenses"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2980B9"
            android:textColor="#FFF"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_filter_income"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Show All Button -->
        <Button
            android:id="@+id/btn_filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show All"
            android:layout_marginTop="8dp"
            android:backgroundTint="#27AE60"
            android:textColor="#FFF"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_filter_expense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_filter_all"
            app:layout_constraintBottom_toTopOf="@id/btn_export_json"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Export to JSON -->
        <Button
            android:id="@+id/btn_export_json"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Export to JSON"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6C5CE7"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Export to TXT -->
        <Button
            android:id="@+id/btn_export_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Export to TXT"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E67E22"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/btn_export_json"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
